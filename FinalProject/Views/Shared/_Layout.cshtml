<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <script src="https://kit.fontawesome.com/12b1a4f910.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @RenderSection("css", required: false)
    <link rel="stylesheet" href="~/assets/style.css">
</head>

<body>

    <section id="header">
        <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/logo.png" class="logo" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a class="nav active" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a class="nav" asp-controller="Shop" asp-action="Index">Shop</a></li>
                <li><a class="nav" asp-controller="Blog" asp-action="Index">Blog</a></li>
                <li><a class="nav" asp-controller="About" asp-action="Index">About</a></li>
                <li><a class="nav" asp-controller="Contact" asp-action="Index">Contact</a></li>
                <li id="lg-bag"><a asp-controller="Card" asp-action="Index"><i class="fa-solid fa-bag-shopping"></i></a></li>
                <a href="#" id="close"><i class="fa-solid fa-xmark"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="cart.html"><i class="fa-solid fa-bag-shopping"></i></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>
    @RenderBody()

    @await Component.InvokeAsync("Footer")
    


    <script src="~/assets/script.js"></script>
    @RenderSection("Scripts", required: false)


</body>

</html>
