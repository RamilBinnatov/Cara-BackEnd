@model List<Product>

@foreach (var item in Model)
{
    <li class="search-nameli">
        <a style="color: #E3E6F3 " asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
            <img src="~/assets/img/products/@item.ProductImages.FirstOrDefault(m=>m.IsMain).Image" alt="banner" width="100" height="100">
            @item.Title @item.Price$
        </a>
    </li>
}


<style>
    .search-nameli{
        width:200px;
    }
</style>